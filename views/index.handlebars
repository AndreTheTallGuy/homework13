<h1>Burgers!</h1>

<h2>Burgers Yet to be Devoured</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    <li>
        {{ burger_name }}
        <button class="devour-burger" data-id="{{id}}" data-devour="{{devoured}}">
            {{#if devoured}}Make Another!{{else}}Devour!{{/if}}

        </button>
    </li>

    {{/unless}}
    {{/each}}
</ul>

<h2>Burgers That Have Been Devoured!</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    {{ burger_name }}
    <button class="devour-burger" data-id="{{id}}" data-devour="{{devoured}}">
        {{#if devoured}}Make Another!{{else}}Devour!{{/if}}

    </button>
    {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="BN">Burger Name:</label>
        <input type="text" class="BN" name="burger_name">
    </div>

    <div class="form-group">
        <label for="devour">Devoured?</label><br>
        <input type="radio" name="devoured" value="0"> Not Devoured
        <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    </div>

    <button type="submit">Add Burger</button>
</form>