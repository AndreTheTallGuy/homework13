<div class="logo">
    <img src="">
</div>
<div class="container">
    <div class="served">
        <h2>Burgers Yet to be Devoured</h2>

        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            <li>
                {{ burger_name }}
                <button class="devour-burger" data-id="{{id}}" data-devour="{{devoured}}">
                    {{#if devoured}}Make Another!{{else}}Devour!{{/if}}

                </button>
            </li>

            {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="eaten">
        <h2>Burgers That Have Been Devoured!</h2>

        <ul>
            {{#each burgers}}
            {{#if devoured}}
            {{ burger_name }}
            <button class="devour-burger" data-id="{{id}}" data-devour="{{devoured}}">
                {{#if devoured}}Make Another!{{else}}Devour!{{/if}}

            </button>
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>
<div class="add">
    <h2>Make a Burger</h2>
    <form class="create-form">

        <div class="form-group">
            <label for="BN">Burger Name:</label>
            <input type="text" class="BN" name="burger_name">
        </div>
        <button type="submit">Add Burger</button>
    </form>
</div>